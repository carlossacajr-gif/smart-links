---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dashboard de Smart Links" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Smart Links</title>
	</head>
	<body class="min-h-screen bg-[#0A0A0B] text-[#FAFAFA] antialiased selection:bg-indigo-500/30 font-sans">
    <div class="fixed inset-0 z-[-1] bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-indigo-900/20 via-[#0A0A0B] to-[#0A0A0B]"></div>
		<slot />
	</body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
    --color-background: #0A0A0B;
    --color-foreground: #FAFAFA;
    --color-card: #121214;
    --color-card-border: #27272A;
    --color-primary: #6366F1;
    --color-primary-hover: #4F46E5;
    
    --animate-in: animate-in 0.2s ease-out;
  }
  
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
</style>
