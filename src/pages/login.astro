---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm';

// Importante para no permitir acceso a /login si ya hay sesi√≥n
const { cookies } = Astro;
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="Acceso a Plataforma">
  <main class="min-h-screen flex items-center justify-center p-4 relative overflow-hidden transition-colors duration-700">
    <!-- Luz ambiente focalizada para el Login (Saca Red) -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[80vw] h-[80vw] max-w-[800px] max-h-[800px] bg-[#EB3333]/10 dark:bg-[#EB3333]/15 blur-[150px] rounded-full pointer-events-none mix-blend-multiply dark:mix-blend-screen transition-colors duration-1000"></div>
    
    <div class="w-full relative z-10">
      <LoginForm client:only="react" />
    </div>
  </main>
</Layout>
